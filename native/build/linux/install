#!/usr/bin/env bash

chrome_config_path="$DESTDIR/etc/opt/chrome/native-messaging-hosts/"

if [[ ! -d "$chrome_config_path" ]]; then
    mkdir -p "$chrome_config_path"
fi

pushd $(dirname ${BASH_SOURCE[0]}) &> /dev/null
absolute="$PWD"
popd &> /dev/null

cp "$absolute/moe.winneon.watchwithmpv.json" "$chrome_config_path"
install -D "$absolute/install" "$DESTDIR/usr/bin/watch-with-mpv-native-linux"
